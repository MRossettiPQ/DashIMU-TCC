{
  "name": "vite-electron-builder",
  "description": "Secure boilerplate for Electron app based on Vite",
  "version": "1.0.0",
  "private": true,
  "author": {
    "email": "matheus__rossetti@hotmail.com",
    "name": "Matheus Rossetti"
  },
  "main": "project/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd project/main && vite build",
    "build:preload": "cd project/preload && vite build",
    "build:renderer": "cd project/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r project/main --passWithNoTests",
    "test:preload": "vitest run -r project/preload --passWithNoTests",
    "test:renderer": "vitest run -r project/renderer --passWithNoTests",
    "watch": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,vue",
    "typecheck:main": "tsc --noEmit -p project/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p project/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p project/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,vue,json}\""
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-ws": "^3.0.1",
    "@types/i18n": "^0.13.6",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "18.15.12",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@vitejs/plugin-vue": "4.1.0",
    "@vue/test-utils": "2.3.2",
    "cross-env": "7.0.3",
    "electron": "24.1.2",
    "electron-builder": "23.6.0",
    "eslint": "8.38.0",
    "eslint-plugin-vue": "9.11.0",
    "happy-dom": "9.8.2",
    "nano-staged": "0.8.0",
    "playwright": "1.32.3",
    "simple-git-hooks": "2.8.1",
    "typescript": "5.0.4",
    "unplugin-auto-expose": "0.0.4",
    "vite": "4.3.0",
    "vitest": "0.30.1",
    "vue": "3.2.47",
    "vue-tsc": "1.2.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "electron-updater": "5.3.0",
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "glob": "^10.2.1",
    "i18n": "^0.15.1",
    "jsonwebtoken": "^9.0.0",
    "mariadb": "^3.1.1",
    "mathjs": "^11.8.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.2.3",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  }
}
