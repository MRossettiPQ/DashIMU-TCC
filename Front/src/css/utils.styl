//@import "variables.styl"

/*
 * Cores
 */

$colors = 'primary'  var(--q-color-primary),
        'secondary'  var(--q-color-secondary),
        'tertiary'   var(--q-color-tertiary),
        'neutral'    var(--q-color-neutral),
        'white'      var(--q-color-white),
        'dark'       var(--q-color-dark),


for color in $colors
  cName = color[0]
  cValue = color[1]
  .c-{cName}
    color cValue !important
  .bg-{cName}
    background-color cValue !important

.bg-decorated
  background $tertiary /* Old browsers */
  background -moz-linear-gradient(70deg, var(--primary-color) 0%, var(--primary-color) 30%, var(--neutral-color) 30.1%, var(--neutral-color) 100%)
  background -webkit-linear-gradient(70deg, var(--primary-color) 0%, var(--primary-color) 30%, var(--neutral-color) 30.1%, var(--neutral-color) 100%)
  background linear-gradient(70deg, var(--primary-color) 0%, var(--primary-color) 30%, var(--neutral-color) 30.1%, var(--neutral-color) 100%)
  color var(--neutral-foreground-color)

/*
 * Margins & Paddings
 */
for space in (1..5)
  space = space * 8
  .m-{space}
    margin unit(space, 'px') !important
  .m-v-{space}
    margin unit(space, 'px') 0 !important
  .m-h-{space}
    margin 0 unit(space, 'px') !important
  .p-{space}
    padding unit(space, 'px') !important
  .p-v-{space}
    padding unit(space, 'px') 0 !important
  .p-h-{space}
    padding 0 unit(space, 'px') !important

for space in (0..20)
  space = space * 5
  .m-{space}
    margin unit(space, 'px') !important
  .m-v-{space}
    margin unit(space, 'px') 0 !important
  .m-h-{space}
    margin 0 unit(space, 'px') !important
  .p-{space}
    padding unit(space, 'px') !important
  .p-v-{space}
    padding unit(space, 'px') 0 !important
  .p-h-{space}
    padding 0 unit(space, 'px') !important

for space in (0..20)
  space = space * 5
  .m-t-{space}
    margin-top unit(space, 'px') !important
  .m-b-{space}
    margin-bottom unit(space, 'px') !important
  .m-l-{space}
    margin-left unit(space, 'px') !important
  .m-r-{space}
    margin-right unit(space, 'px') !important
  .p-t-{space}
    padding-top unit(space, 'px') !important
  .p-b-{space}
    padding-bottom unit(space, 'px') !important
  .p-l-{space}
    padding-left unit(space, 'px') !important
  .p-r-{space}
    padding-right unit(space, 'px') !important

for space in (1..5)
  space = space * 8
  .m-t-{space}
    margin-top unit(space, 'px') !important
  .m-b-{space}
    margin-bottom unit(space, 'px') !important
  .m-l-{space}
    margin-left unit(space, 'px') !important
  .m-r-{space}
