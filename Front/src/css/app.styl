@import 'utils.styl'
// app global css in Stylus form
.responsive-height
  width 100%
  height 100vh
  max-height 1080px

.responsive-content
  height 100%
  max-width 1920px
  margin auto
  overflow-x hidden

.grid-tela
  grid-template-columns 1% 98% 1%
  display grid
  flex-direction column
  padding 10px

.form-column //colunas
  display flex
  flex-direction row
  &__gap
    gap 16px
    &-sm
      gap 6px
    &-md
      gap 12px
    &-lg
      gap 18px
  &__padding
    padding 16px
    &-sm
      gap 6px
    &-md
      gap 12px
    &-lg
      gap 18px
  &__no-padding
    padding 0

.form-lines //linhas
  display flex
  flex-direction column
  &__gap
    gap 16px
    &-sm
      gap 6px
    &-md
      gap 12px
    &-lg
      gap 18px
  &__padding
    padding 16px
    &-sm
      gap 6px
    &-md
      gap 12px
    &-lg
      gap 18px
  &__no-padding
    padding 0

.content-column //colunas
  display flex
  gap 16px
  flex-direction row

.content-component
  display grid
  height 100%
